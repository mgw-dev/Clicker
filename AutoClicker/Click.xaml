<UserControl x:Class="AutoClicker.Click"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoClicker"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Template="{StaticResource UserControlSize}">
    <Grid HorizontalAlignment="Stretch">
        <GroupBox Header="Click" HorizontalAlignment="Stretch" BorderThickness="1" BorderBrush="White">
            <ComboBox Name="ComboBox" Width="78" ItemsSource="{Binding Source={local:EnumBindingSourceEx MouseButton}}" SelectedIndex="0" HorizontalAlignment="Center"/>
        </GroupBox>
    </Grid>
</UserControl>
