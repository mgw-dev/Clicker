<UserControl x:Class="AutoClicker.Delay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoClicker"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             Template="{StaticResource UserControlSize}">
    <Grid HorizontalAlignment="Stretch">
        <GroupBox Header="Delay (ms)" HorizontalAlignment="Stretch">
            <ui:NumberBox x:Name="NumberBox" Width="78" Value="1000" Minimum="0" Maximum="{Binding Source={x:Static system:Int32.MaxValue}}" HorizontalAlignment="Center"/>
        </GroupBox>
    </Grid>
</UserControl>
